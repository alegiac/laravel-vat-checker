{
    "name": "alegiac/laravel-vat-checker",
    "description": "European VAT Validator package for Laravel",
    "keywords": [
        "alegiac",
        "laravel-vat-checker"
    ],
    "version": "1.0.2",
    "homepage": "https://github.com/alegiac/laravel-vat-checker",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alessandro Giacomella",
            "email": "alessandro.giacomella@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Alegiac\\LaravelVatChecker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alegiac\\LaravelVatChecker\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alegiac\\LaravelVatChecker\\LaravelVatCheckerServiceProvider"
            ],
            "aliases": {
                "LaravelVatChecker": "Alegiac\\LaravelVatChecker\\LaravelVatCheckerFacade"
            }
        }
    }
}
